extends layout/base

block content
    .container-fluid
        .row
            .col-md-3.col-centered
                .panel.panel-login
                    .panel-heading
                        .row
                            .col-xs-6
                                a#login-form-link.active(href='#') Login
                            .col-xs-6
                                a#signup-form-link(href='#') Signup
                    hr
                    .panel-body
                        .row
                            .col-md-12
                                form#login-form(action='#', role='form')
                                    .form-group
                                        input.form-control(type='email', name='login-email', tabindex='1', placeholder='Email', value='')
                                    .form-group
                                        input.form-control(type='password', name='login-password', tabindex='2', placeholder='Password')
                                    .form-group.text-center
                                        input(type='checkbox', tabindex='3', name='remember')
                                        label(for='remember')  Remember Me
                                    .form-group
                                        .row
                                            .col-sm-6.col-sm-offset-3
                                                input.form-control.btn.btn-login(type='submit', name='login-submit', tabindex='4', value='Log In')
                                    .form-group
                                        .row
                                            .col-lg-12
                                                .text-center
                                                    a.forgot-password(href='#', tabindex='5') Forgot Password?
                                form#signup-form(action='#', role='form', style='display: none;')
                                    .form-group
                                        input#email.form-control(type='email', name='signup-email', tabindex='1', placeholder='Email Address', value='')
                                    .form-group
                                        input#password.form-control(type='password', name='signup-password', tabindex='2', placeholder='Password')
                                    .form-group
                                        input#confirm-password.form-control(type='password', name='confirm-password', tabindex='2', placeholder='Confirm Password')
                                    .form-group
                                        .row
                                            .col-sm-6.col-sm-offset-3
                                                input#signup-submit.form-control.btn.btn-signup(type='submit', name='signup-submit', tabindex='4', value='Signup Now')
block scripts
    script(src='./js/app-index.js')
