extends layout/base

block content
    .container-fluid
        .row
            .col-md-3(name='left')
                .weather
                    h2
                        i.fa.fa-sun-o
                        |  Weather
                    hr
                    .weather-current
                        img(src='./images/dev/150x150.png')
                        .p.weather-degree
                        .p.weather-description
                    .weather-forecast
                        ul
                            each val in [0, 1, 2, 3]
                                li(data-day='' + val)
                                    p.day-title= weather.days[val]
                                    p.temps
                                        span.hi
                                        span |
                                        span.lo
                                    img(src='./images/dev/50x50.png')
                                    p.cond-text
                                    div
                                        span.pop
                                        span
                    p.location

                .email
                    h2
                        i.fa.fa-envelope-o
                        |  Email
                    hr
            .col-md-6(name='center')
                p.welcome Welcome

            .col-md-3(name='right')
                .tv
                    h2
                        i.fa.fa-television
                        |  TV Shows
                    hr
                    ul.tv-list.tv-list-left
                        each val in [0, 1, 2, 3, 4]
                            if val == 2
                                li.today
                                    p= tv.days[val]
                            - else
                                li
                                    p= tv.days[val]

                    ul.tv-list.tv-list-right
                        li(data-tv-day=1)
                        li(data-tv-day=2)
                        li(data-tv-day=3).today
                        li(data-tv-day=4)
                        li(data-tv-day=5)

                .movies
                    h2
                        i.fa.fa-film
                        |  Movies
                    hr
                    .movies-container
                        .movie
                            .movie-overlay
                        .movie
                            .movie-overlay
block scripts
    script(src='./js/app.js')