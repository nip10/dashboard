extends layout/base

block content
    .container-fluid
        .row
            .col-md-3(name='left')
                .weather
                        h2
                            i.fa.fa-sun-o
                            |  Weather
                        hr
                        if weather.conditions
                            .weather-current
                                img(src='./images/weather/' + weather.conditions.icon + '.svg')
                                .p.weather-degree= weather.conditions.temperature + 'ÂºC'
                                .p.weather-description= weather.conditions.description
                        else
                            p (debug) Error fetching weather information (conditions) from the api
                        if weather.forecast
                            .weather-forecast
                                ul
                                    each val in [0, 1, 2, 3]
                                        li(data-day='' + val)
                                            p.day-title= weather.days[val]
                                            p.temps
                                                span.hi= weather.forecast.forecastday[val].high.celsius
                                                span |
                                                span.lo= weather.forecast.forecastday[val].low.celsius
                                            img(src='./images/weather/' + weather.forecast.forecastday[val].icon + '.svg')
                                            p.cond-text= weather.forecast.forecastday[val].conditions
                                            div
                                                span.pop
                                                span= weather.forecast.forecastday[val].avehumidity + ' % /' + weather.forecast.forecastday[val].qpf_allday.mm + ' mm'
                            p.location= weather.conditions.location
                        else
                            p (debug) Error fetching weather information (forecast) from the api

                .email
                    h2
                        i.fa.fa-envelope-o
                        |  Email
                    hr
            .col-md-6(name='center')
                p.welcome Welcome

            .col-md-3(name='right')
                .tv
                    h2
                        i.fa.fa-television
                        |  TV Shows
                    hr
                    ul.tv-list.tv-list-left
                        each val in [0, 1, 2, 3, 4]
                            if val == 2
                                li.today
                                    p= tv.days[val]
                            else
                                li
                                    p= tv.days[val]

                    ul.tv-list.tv-list-right 
                        each val in [1, 2, 3, 4, 5]
                            - var day = 'day' + val;
                            li(data-tv-day=day, class=(val == 3) ? 'today' : '')
                                if (!tv.list[day])
                                    p No TvShows today !
                                else
                                    each val in tv.list[day]
                                            p= val

                .movies
                    h2
                        i.fa.fa-film
                        |  Movies
                    hr
                    .movies-container
                        .movie(style="background-image: url(" + movies.list[0] + ")")
                            .movie-overlay
                        .movie(style="background-image: url(" + movies.list[1] + ")")
                            .movie-overlay
block scripts
    script(src='./js/app.js')